<% if @city.nil? %>
    <p>No city provided to update path</p>
<% elsif not City.all.key?(@city.to_sym) %>
    <p>The city you want to update doesn't exist in our database</p>
<% else %>
    <%= form_with url: "update", local: true, method: "post" do |form| %>
        <p>City Name: <%= @city %></p>
        <%= form.hidden_field :city, :value => @city %>
        <p>Landmark: <%= form.text_field :landmark %></p>
        <p>Population: <%= form.text_field :population %></p>
        <%= form.submit "Update" %>
    <% end %>
<% end %>
